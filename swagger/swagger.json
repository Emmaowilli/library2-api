{
  "openapi": "3.0.0",
  "info": {
    "title": "Library API",
    "version": "1.0.1",
    "description": "API for managing authors and books."
  },
  "servers": [
    {
      "url": "http://localhost:8080",
      "description": "Local development server"
    },
    {
      "url": "https://library2-api.onrender.com",
      "description": "Render production server"
    }
  ],
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  },
  "tags": [
    {
      "name": "Auth",
      "description": "Authentication management operations"
    },
    {
      "name": "Authors",
      "description": "Author management"
    },
    {
      "name": "Books",
      "description": "Books management operations"
    }
  ],
  "paths": {
    "/auth/register": {
      "post": {
        "tags": ["Auth"],
        "summary": "Register a new user",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["username", "email", "password"],
                "properties": {
                  "username": {
                    "type": "string",
                    "description": "Unique username"
                  },
                  "email": {
                    "type": "string",
                    "format": "email",
                    "description": "User email address"
                  },
                  "password": {
                    "type": "string",
                    "minLength": 6,
                    "description": "User password (minimum 6 characters)"
                  }
                }
              },
              "example": {
                "username": "emmanuelowilli",
                "email": "emmanuelowilli2025@gmail.com",
                "password": "moroni10"
              }
            }
          }
        },
        "responses": {
          "201": { "description": "User registered successfully" },
          "400": { "description": "Validation error or user already exists" },
          "500": { "description": "Server error" }
        }
      }
    },
    "/auth/login": {
      "post": {
        "tags": ["Auth"],
        "summary": "Login user and receive JWT",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["email", "password"],
                "properties": {
                  "email": {
                    "type": "string",
                    "format": "email"
                  },
                  "password": {
                    "type": "string"
                  }
                }
              },
              "example": {
                "email": "emmanuelowilli2025@gmail.com",
                "password": "moroni10"
              }
            }
          }
        },
        "responses": {
          "200": { "description": "JWT token returned" },
          "400": { "description": "Invalid credentials" },
          "500": { "description": "Server error" }
        }
      }
    },
    "/api/authors": {
      "get": {
        "summary": "Get all authors",
        "tags": ["Authors"],
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": { "description": "A list of authors" },
          "401": { "description": "Unauthorized - invalid or missing token" },
          "500": { "description": "Server error" }
        }
      },
      "post": {
        "summary": "Create a new author",
        "tags": ["Authors"],
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["firstName", "lastName", "birthDate"],
                "properties": {
                  "firstName": { "type": "string" },
                  "lastName": { "type": "string" },
                  "birthDate": { "type": "string", "format": "date" }
                }
              },
              "example": {
                "firstName": "Emma",
                "lastName": "Smith",
                "birthDate": "2000-10-25"
              }
            }
          }
        },
        "responses": {
          "201": { "description": "Author created successfully" },
          "400": { "description": "Invalid input" },
          "401": { "description": "Unauthorized - invalid or missing token" },
          "500": { "description": "Server error" }
        }
      }
    },
    "/api/authors/{authorId}": {
      "get": {
        "summary": "Get author by ID",
        "tags": ["Authors"],
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "name": "authorId",
            "in": "path",
            "required": true,
            "schema": { "type": "string" },
            "description": "Author ID"
          }
        ],
        "responses": {
          "200": { "description": "Author details" },
          "401": { "description": "Unauthorized - invalid or missing token" },
          "404": { "description": "Author not found" },
          "500": { "description": "Server error" }
        }
      },
      "put": {
        "summary": "Update author by ID",
        "tags": ["Authors"],
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "name": "authorId",
            "in": "path",
            "required": true,
            "schema": { "type": "string" },
            "description": "Author ID"
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["firstName", "lastName", "birthDate"],
                "properties": {
                  "firstName": { "type": "string" },
                  "lastName": { "type": "string" },
                  "birthDate": { "type": "string", "format": "date" }
                }
              },
              "example": {
                "firstName": "Emma",
                "lastName": "Johnson",
                "birthDate": "2000-10-25"
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Author updated successfully" },
          "400": { "description": "Invalid input" },
          "401": { "description": "Unauthorized - invalid or missing token" },
          "404": { "description": "Author not found" },
          "500": { "description": "Server error" }
        }
      },
      "delete": {
        "summary": "Delete author by ID",
        "tags": ["Authors"],
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "name": "authorId",
            "in": "path",
            "required": true,
            "schema": { "type": "string" },
            "description": "Author ID"
          }
        ],
        "responses": {
          "204": { "description": "Author deleted successfully" },
          "401": { "description": "Unauthorized - invalid or missing token" },
          "404": { "description": "Author not found" },
          "500": { "description": "Server error" }
        }
      }
    },
    "/api/books": {
      "get": {
        "summary": "Get all books",
        "tags": ["Books"],
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": { "description": "A list of books" },
          "401": { "description": "Unauthorized - invalid or missing token" },
          "500": { "description": "Server error" }
        }
      },
      "post": {
        "summary": "Create a new book",
        "tags": ["Books"],
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["title", "authorId", "year", "genre", "pages", "publisher", "isbn", "place", "language"],
                "properties": {
                  "title": { "type": "string" },
                  "authorId": { "type": "string" },
                  "year": { "type": "integer" },
                  "genre": { "type": "string" },
                  "pages": { "type": "integer" },
                  "publisher": { "type": "string" },
                  "isbn": { "type": "string" },
                  "place": { "type": "string" },
                  "language": { "type": "string" }
                }
              },
              "example": {
                "title": "The Great Adventure",
                "authorId": "698316849203a1400f737c2c",
                "year": 2022,
                "genre": "Adventure",
                "pages": 350,
                "publisher": "Adventure Press",
                "isbn": "9781234567890",
                "place": "New York",
                "language": "English"
              }
            }
          }
        },
        "responses": {
          "201": { "description": "Book created successfully" },
          "400": { "description": "Invalid input" },
          "401": { "description": "Unauthorized - invalid or missing token" },
          "500": { "description": "Server error" }
        }
      }
    },
    "/api/books/{id}": {
      "get": {
        "summary": "Get book by ID",
        "tags": ["Books"],
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" },
            "description": "Book ID"
          }
        ],
        "responses": {
          "200": { "description": "Book details" },
          "401": { "description": "Unauthorized - invalid or missing token" },
          "404": { "description": "Book not found" },
          "500": { "description": "Server error" }
        }
      },
      "put": {
        "summary": "Update book by ID",
        "tags": ["Books"],
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" },
            "description": "Book ID"
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "title": { "type": "string" },
                  "authorId": { "type": "string" },
                  "year": { "type": "integer" },
                  "genre": { "type": "string" },
                  "pages": { "type": "integer" },
                  "publisher": { "type": "string" },
                  "isbn": { "type": "string" },
                  "place": { "type": "string" },
                  "language": { "type": "string" }
                }
              },
              "example": {
                "title": "The Great Adventure - Updated",
                "authorId": "698316849203a1400f737c2c",
                "year": 2023,
                "genre": "Adventure",
                "pages": 400,
                "publisher": "Adventure Press",
                "isbn": "9781234567890",
                "place": "New York",
                "language": "English"
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Book updated successfully" },
          "400": { "description": "Invalid input" },
          "401": { "description": "Unauthorized - invalid or missing token" },
          "404": { "description": "Book not found" },
          "500": { "description": "Server error" }
        }
      },
      "delete": {
        "summary": "Delete book by ID",
        "tags": ["Books"],
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" },
            "description": "Book ID"
          }
        ],
        "responses": {
          "204": { "description": "Book deleted successfully" },
          "401": { "description": "Unauthorized - invalid or missing token" },
          "404": { "description": "Book not found" },
          "500": { "description": "Server error" }
        }
      }
    },
"/api/publishers": {
 "get": {
 "summary": "Get all publishers",
 "tags": ["Publishers"],
"security": [{ "bearerAuth": [] }],
 "responses": {
 "200": {
 "description": "A list of publishers"
},
"401": {
 "description": "Unauthorized - invalid or missing token"
 },
 "500": {
 "description": "Server error"
 }
 }
 },
 "post": {
 "summary": "Create a new publisher",
 "tags": ["Publishers"],
 "security": [{ "bearerAuth": [] }],
 "requestBody": {
 "required": true,
"content": {
 "application/json": {
 "schema": {
 "type": "object",
 "required": ["name"],
 "properties": {
 "name": {
 "type": "string",
 "description": "Publisher name (unique)"
 },
 "foundedYear": {
 "type": "integer",
 "description": "Year the publisher was founded"
 },
 "country": {
 "type": "string",
 "description": "Country of origin"
},
 "website": {
 "type": "string",
 "format": "uri",
 "description": "Publisher website URL"
 },
 "description": {
 "type": "string",
 "description": "Brief description of the publisher"
 },
"isActive": {
 "type": "boolean",
 "default": true,
 "description": "Whether the publisher is currently active"
 }
 }
 },
"example": {
  "name": "Uganda Publishing House - Updated",
  "foundedYear": 2000,
  "country": "Uganda",
  "website": "http://www.uph.co.ug",
  "description": "Long-established Ugandan publisher specializing in textbooks, academic works and local languages",
  "isActive": true
}
}
}
},
"responses": {
 "201": {
 "description": "Publisher created successfully"
},
"400": {
 "description": "Invalid input or validation failed"
},
 "401": {
 "description": "Unauthorized - invalid or missing token"
 },
"500": {
 "description": "Server error"
}
}
}
},
